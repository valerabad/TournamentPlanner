@using Microsoft.AspNetCore.Identity
@using TournamentPlanner.DAL.Entities
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Players/Index" title="Players list">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout")">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
   <li class="nav-item">
       <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Sing in</a>
   </li>
   <li class="nav-item">
       <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Log in</a>
   </li>
}
</ul>
